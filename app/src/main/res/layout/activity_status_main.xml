<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="in.whatsaga.whatsapplongerstatus.pro.ui.activity.status.StatusMainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        app:title="@string/status_saver"
        app:titleTextColor="@color/white" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/_12sdp"
                    android:letterSpacing="0.03"
                    android:fontFamily="@font/poppins"
                    android:padding="12sp"
                    android:background="@drawable/et_bg"
                    android:backgroundTint="@color/back_buttn"
                    android:textColor="@color/dark"
                    android:lineSpacingExtra="@dimen/_3sdp"
                    android:text="@string/note_to_save_status"
                    android:textSize="17sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12sp"
                        android:layout_marginEnd="6sp"
                        android:layout_weight="1">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/whatsapp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12sp"
                            android:layout_margin="12sp"
                            app:cardBackgroundColor="@color/back_buttn"
                            app:strokeWidth="0sp"
                            app:cardElevation="0sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="12sp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="42sp"
                                    android:layout_height="42sp"
                                    app:tint="@color/orange"
                                    android:src="@drawable/ic_whatsapp_mini" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/whatsapp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12sp"
                        android:layout_marginEnd="6sp"
                        android:layout_weight="1">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/business"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12sp"
                            android:layout_margin="12sp"
                            app:cardBackgroundColor="@color/back_buttn"
                            app:strokeWidth="0sp"
                            app:cardElevation="0sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="12sp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="42sp"
                                    android:layout_height="42sp"
                                    app:tint="@color/orange"
                                    android:src="@drawable/ic_icon_whatsapp" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/business"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/downloads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16sp"
                    android:layout_margin="12sp"
                    app:cardBackgroundColor="@color/back_buttn"
                    app:strokeWidth="0sp"
                    app:cardElevation="0sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/my_status"
                            android:fontFamily="@font/poppins"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="42sp"
                            android:layout_height="42sp"
                            app:tint="@color/orange"
                            android:src="@drawable/downloadsolid" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

</RelativeLayout>